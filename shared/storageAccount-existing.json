{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "Description": "The name of the new storage account created to store the VMs disks"
            }
        },
        "storageAccountType": {
            "type": "string",
            "metadata": {
                "Description": "The type of the Storage Account created"
            },
            "defaultValue": "Standard_LRS"
        },
        "storageAccountExistingRG": {
            "type": "string",
            "metadata": {
                "Description": "Resource Group Name of the existing Storage Account"
            }
        },
        "storageAccountSasProperties": {
            "type": "object",
            "defaultValue": {
              "signedServices": "b",
              "signedPermission": "acluw",
              "signedExpiry": "2020-12-30T00:00:00Z",
              "signedResourceTypes": "cos"
            }
          }
    },
    "variables": {
    },
    "resources": [

    ],
    "outputs": {
        "storageAccountId": {
            "value": "[resourceId(parameters('storageAccountExistingRG'),'Microsoft.Storage/StorageAccounts',parameters('storageAccountName'))]",
            "type": "string"
        },
        "storageAccountEndpoint": {
            "value": "[reference(resourceId(parameters('storageAccountExistingRG'), 'Microsoft.Storage/storageAccounts/', parameters('storageAccountName')), '2016-01-01').primaryEndpoints.blob]",
            "type": "string"
        },
        "accountSAS": {
            "type": "string",
            "value": "[listAccountSas(parameters('storageAccountName'), '2018-02-01', parameters('storageAccountSasProperties')).accountSasToken]"
        }
    }
}
