{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "Description": "The name of the new storage account created to store the VMs disks"
            }
        },
        "storageAccountType": {
            "type": "string",
            "metadata": {
                "Description": "The type of the Storage Account created"
            },
            "defaultValue": "Standard_LRS"
        },
        "storageAccountExistingRG": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "Description": "Resource Group Name of the existing Storage Account"
            }
        }
    },
    "variables": {
        "storageAccountSasProperties": {
            "type": "object",
            "defaultValue": {
              "signedServices": "bt",
              "signedPermission": "acluw",
              "signedExpiry": "2018-12-30T00:00:00Z",
              "signedResourceTypes": "co"
            }
          },
        "backupContainerName": "xgbackup"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[concat(parameters('storageAccountName'))]",
            "apiVersion": "2018-02-01",
            "location": "[resourceGroup().location]",
            "properties": {
            },
            "kind": "Storage",
            "sku": {
                "name": "[parameters('storageAccountType')]"
            },
            "resources": [
                {
                    "name": "[concat('default/', variables('backupContainerName'))]",
                    "type": "blobServices/containers",
                    "apiVersion": "2018-03-01-preview",
                    "dependsOn": [
                        "[parameters('storageAccountName')]"
                    ]
                }
            ]
            
        }
    ],
    "outputs": {
        "storageAccountId": {
            "value": "[resourceId('Microsoft.Storage/StorageAccounts',parameters('storageAccountName'))]",
            "type": "string"
        },
        "storageAccountEndpoint": {
            "value": "[reference(concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountName')), '2016-01-01').primaryEndpoints.blob]",
            "type": "string"
        },
        "accountSAS": {
            "type": "string",
            "value": "[listAccountSas(parameters('storageAccountName'), '2018-02-01', variables('storageAccountSasProperties')).accountSasToken]"
        }
    }
}
